import java.util.Scanner;

//O(n)
public class chapter1e {
	
	public static char[] compress(String s){
		int length = s.length();
		char[] sCompressed = new char[length];
		char pivot=s.charAt(0);
		sCompressed[0]=pivot;
		int count=1;
		int sCindex=1;
		for(int i=1;i<length;i++){
			if (sCindex>=length-1&&count==1){
				System.out.println("here");
				return s.toCharArray();
			}
			if(pivot==s.charAt(i)){
				count++;				
			}else{
				pivot=s.charAt(i);
				sCompressed[sCindex++]=(char) (count+48);
				sCompressed[sCindex++]=pivot;
				System.out.println(sCindex);
				count=1;
			}
		}
		//System.out.println(count);
		if (length>1) sCompressed[sCindex]=(char) (count+48);
		return sCompressed;
	}
	
	static Scanner userInput = new Scanner(System.in);
	
	public static void main (String[] args){
		System.out.println("Enter a string containing letter from a to z.");
		if(userInput.hasNext()){
			String myString=userInput.next();
			System.out.println(compress(myString));
		}
		
	}
}

import java.util.Scanner;


public class chapter1e {
	public static String compress(String s){
		int length = s.length();
		char[] sCompressed = new char[length];
		for(int i=0,j=0;i<length;i++){
			char pivot=s.charAt(i);
			System.out.println("current char is "+ s.charAt(i));
			sCompressed[j]=pivot;
			j++;
			int count=1;
			while(i<length&&pivot==s.charAt(i+1)){
				i++;
				count++;				
			}
			if(count>1){
				sCompressed[j]=(char) (count+48);
				System.out.println("add number at "+j);
				j++;
			}
			
		}
		System.out.println("out of loop");
		for (int i=0;i<length;i++){
			System.out.println(sCompressed[i]);
		}
		String compressed=sCompressed.toString();
		System.out.println(compressed);
		return compressed;
	}
	
	static Scanner userInput = new Scanner(System.in);
	public static void main (String[] args){
		if(userInput.hasNext()){
			String myString=userInput.next();
			System.out.println(myString);
			System.out.println(compress(myString));
		}
		
	}
}

import java.util.Scanner;


public class chapter1e {
	
	public static char[] compress(String s){
		int length = s.length();
		char[] sCompressed = new char[length*2];
		boolean charRepeated = false;
		char pivot=s.charAt(0);
		sCompressed[0]=pivot;
		int count=1;
		for(int i=1,j=1;i<length&&j<length;i++){
			if(pivot==s.charAt(i)){
				if (!charRepeated){
					charRepeated=true;
					return s.toCharArray();
				}
				
				count++;				
			}else{
				pivot=s.charAt(i);
				sCompressed[j]=(char) (count+48);
				j++;
				sCompressed[j]=pivot;
				j++;
				count=1;
			}
			if (i==(length-1)){
				sCompressed[j]=(char) (count+48);
			}
		}
		return sCompressed;
	}
	
	static Scanner userInput = new Scanner(System.in);
	
	public static void main (String[] args){
		System.out.println("Enter a string.");
		if(userInput.hasNext()){
			String myString=userInput.next();
			System.out.println(compress(myString));
		}
		
	}
}
